<%- include('header.ejs') %>
<link rel="stylesheet" href="/css/player.css">
<script>
    fetch('/getVideo/<%= video.id %>')
        .then(response => response.blob())
        .then(blob => {
            const videoElement = document.createElement('video');
            videoElement.src = URL.createObjectURL(blob);
            videoElement.controls = true;
            videoElement.classList.add('videoPlayer');
            document.getElementById("videoPlayerContainer").appendChild(videoElement);
        })
        .catch(error => console.error('Error fetching video:', error));
</script>
<div class="videoPlayerContainer" id="videoPlayerContainer">
    <div class="controls">
        <button class="play-pause" id="playPauseBtn">Play</button>
        <div class="progress-bar" id="progressBar">
            <div></div>
        </div>
        <div class="volume-control">
            <label for="volume">Volume</label>
            <input type="range" id="volume" min="0" max="1" step="0.1">
        </div>
        <button class="fullscreen" id="fullscreenBtn">Fullscreen</button>
    </div>
</div> 
<h2><%= video.videoTitle %></h2>
<p><%= video.videoDescription %></p>
